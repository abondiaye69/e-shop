{% extends 'base.html.twig' %}

{% block title %}Connexion admin{% endblock %}

{% block stylesheets %}
    <style>
        body { margin:0; font-family:"Helvetica Neue", Arial, sans-serif; background:#f5f6fb; color:#0f172a; }
        .wrap { max-width:420px; margin:80px auto; background:#fff; border:1px solid rgba(0,0,0,0.05); border-radius:14px; padding:28px; box-shadow:0 18px 40px rgba(0,0,0,0.05); }
        h1 { margin:0 0 12px 0; font-size:24px; }
        form { display:grid; gap:12px; }
        label { font-weight:600; font-size:14px; }
        input { width:100%; padding:10px 12px; border-radius:10px; border:1px solid rgba(0,0,0,0.1); font-size:14px; }
        button { background:#0f172a; color:#fff; padding:12px 14px; border:none; border-radius:10px; font-weight:700; cursor:pointer; }
        .muted { color:#6b7280; font-size:13px; margin:0; }
        .error { color:#b91c1c; background:#fee2e2; border:1px solid #fecdd3; padding:10px 12px; border-radius:10px; font-size:13px; }
        a { color:#2563eb; text-decoration:none; }
    </style>
{% endblock %}

{% block body %}
    <div class="wrap">
        <h1>Connexion admin</h1>
        <p class="muted">Accès réservé aux administrateurs.</p>

        {% if error %}
            <div class="error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.request.get('reset') %}
            <div class="error" style="background:#ecfdf3; border-color:#bbf7d0; color:#166534;">Mot de passe mis à jour.</div>
        {% endif %}
        {% if app.request.get('created') %}
            <div class="error" style="background:#ecfdf3; border-color:#bbf7d0; color:#166534;">Compte créé. Vous pouvez vous connecter.</div>
        {% endif %}

        <form method="post" action="{{ path('login') }}">
            <div>
                <label for="email">Email</label>
                <input type="email" id="email" name="email" autocomplete="email" required value="{{ last_username }}">
            </div>
            <div>
                <label for="password">Mot de passe</label>
                <input type="password" id="password" name="_password" autocomplete="current-password" required>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <button type="submit">Se connecter</button>
        </form>
        <p class="muted" style="margin-top:12px;"><a href="{{ path('forgot_password') }}">Mot de passe ou identifiant oublié ?</a></p>
        <p class="muted" style="margin-top:4px;"><a href="{{ path('register') }}">Créer un compte</a></p>
    </div>
{% endblock %}
