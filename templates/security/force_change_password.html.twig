{% extends 'base.html.twig' %}

{% block title %}Changer ton mot de passe{% endblock %}

{% block stylesheets %}
    <style>
        body { margin:0; font-family:"Helvetica Neue", Arial, sans-serif; background:#f5f6fb; color:#0f172a; }
        .wrap { max-width:520px; margin:80px auto; background:#fff; border:1px solid rgba(0,0,0,0.05); border-radius:14px; padding:28px; box-shadow:0 18px 40px rgba(0,0,0,0.05); }
        h1 { margin:0 0 12px 0; font-size:24px; }
        form { display:grid; gap:12px; margin-top:12px; }
        label { font-weight:600; font-size:14px; }
        input { width:100%; padding:10px 12px; border-radius:10px; border:1px solid rgba(0,0,0,0.1); font-size:14px; }
        button { background:#0f172a; color:#fff; padding:12px 14px; border:none; border-radius:10px; font-weight:700; cursor:pointer; }
        .muted { color:#6b7280; font-size:13px; margin:0; }
        .error { color:#b91c1c; background:#fee2e2; border:1px solid #fecdd3; padding:10px 12px; border-radius:10px; font-size:13px; margin-top:10px; }
    </style>
{% endblock %}

{% block body %}
    <div class="wrap">
        <h1>Changer ton mot de passe</h1>
        <p class="muted">Mot de passe provisoire détecté. Choisis-en un nouveau.</p>

        {% if error %}
            <div class="error">{{ error }}</div>
        {% endif %}

        <form method="post">
            <div>
                <label for="password">Nouveau mot de passe</label>
                <input type="password" id="password" name="password" required minlength="8">
            </div>
            <div>
                <label for="confirm">Confirme</label>
                <input type="password" id="confirm" name="confirm" required minlength="8">
            </div>
            <button type="submit">Mettre à jour</button>
        </form>
    </div>
{% endblock %}
